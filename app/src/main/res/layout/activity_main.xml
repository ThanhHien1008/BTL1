<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#75CDDC39">
    <TextView
        android:id="@+id/app"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="Đăng Nhập"
        android:textColor="#2196F3"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/us1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/us1"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Tên người dùng"
        android:textSize="20dp"
        android:drawableLeft="@drawable/baseline_account_circle_24"
        app:layout_constraintTop_toBottomOf="@id/app"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/ps1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:hint="Mật khẩu"
        android:drawableLeft="@drawable/baseline_lock_person_24"
        app:layout_constraintTop_toBottomOf="@id/us1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/bt1"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:backgroundTint="#FF9800"
        android:text="Đăng Nhập"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ps1" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:backgroundTint="#FF9800"
        android:textSize="20sp"
        android:text="Đăng Ký"
        app:layout_constraintHorizontal_bias="0.822"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ps1" />
</androidx.constraintlayout.widget.ConstraintLayout>